<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Communities</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
    <style>
        .navbar-nav {
            flex: 1;
            display: flex;
            justify-content: center;
        }

        .navbar-nav .nav-item {
            margin: 0 15px;
        }

        .navbar-right {
            flex: 0;
        }
    </style>
<body>
    <nav class="navbar navbar-expand-sm navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/images/IF.png" alt="InstaFit Logo" style="width:80px;" class="rounded-pill">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto fs-4">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/community">Community</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/mentoring">Mentoring</a>
                    </li>
                </ul>
                <form class="d-flex" action="/search" method="GET">
                    <input class="form-control me-2" type="search" name="query" placeholder="Search users" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
                <div class="navbar-right">
                    <a href="/upload" class="btn btn-primary ms-auto fs-4">Post</a>
                    <!-- Register Button -->
                    <a href="/register" class="btn btn-outline-primary">Register</a>
                    <!-- Login Button -->
                    <a href="/login" class="btn btn-outline-primary">Login</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <h1>Communities</h1>

        <!-- Joined Communities Section -->
        <h2>Joined Communities</h2>
        <div class="row mb-4">
            <% if (joinedCommunities.length> 0) { %>
                <% joinedCommunities.forEach(community=> { %>
                    <div class="col-md-4 mb-4">
                        <div class="card community-card">
                            <img src="/images/<%= community.image %>" class="card-img-top" alt="<%= community.name %>">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= community.name %>
                                </h5>
                                <p class="card-text">
                                    <%= community.description %>
                                </p>
                                <a href="/community/<%= community.communityID %>" class="btn btn-primary">View
                                    Community</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <p>You have not joined any communities yet.</p>
                            <% } %>
        </div>

        <!-- All Communities Section -->
        <h2>All Communities</h2>
        <div class="row">
            <% communities.forEach(community=> { %>
                <div class="col-md-4 mb-4">
                    <div class="card community-card">
                        <img src="/images/<%= community.image %>" class="card-img-top" alt="<%= community.name %>">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= community.name %>
                            </h5>
                            <p class="card-text">
                                <%= community.description %>
                            </p>
                            <a href="/community/<%= community.communityID %>" class="btn btn-primary">View Community</a>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>